package day0115;

import java.util.List;
import java.util.Scanner;
import java.util.Vector;

public class Quiz1 {
	
	List<Shop> list = new Vector<Shop>();
	
	//입력메서드
	public void InputData(){
		Scanner sc = new Scanner(System.in);
		String name;
		int su,dan;
		
		System.out.println("상품명?");
		name = sc.nextLine();
		System.out.println("가격?");
		su = Integer.parseInt(sc.nextLine());
		System.out.println("수량?");
		dan = Integer.parseInt(sc.nextLine());
		
		Shop data = new Shop(name,su,dan);
		System.out.println(list.size());
	}
	
	public void writeData() {
		System.out.println("No.   상품명 	   가격      수량      총액");
		System.out.println("==================================================");
		for(int i = 0; i< list.size(); i++) {
			Shop b = list.get(i);
			System.out.println("상품명: "+ b.sangName +"가격: "+ b.dan+ "수량: "+ b.su );
		}
	}

	public static void main(String[] args) {
		
			Quiz1 q = new Quiz1();
			Scanner sc = new Scanner(System.in);
		
		
		System.out.println("1.상품입고   2.상품재고   9.종료");
		System.out.println("============================");
	}
}

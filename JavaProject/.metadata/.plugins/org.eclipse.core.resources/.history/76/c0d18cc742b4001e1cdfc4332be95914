package day0116;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class FruitShop {
	
	public static void fruit() throws FileNotFoundException,IOException
	{
		String fileName ="C:\\sist0103\\file\\fruitShop";
		FileReader fr = null;
		BufferedReader br = null;
		int cnt = 0;
		String fruitName = null;
		int su=0;
		int dan=0;
		int total=0;
		
		fr = new FileReader(fileName);
		System.out.println("**과일입고 목록**");
		System.out.println("번호\t과일명\t수량\t단가\t총금액");
		System.out.println("==========================================");
		
		br = new BufferedReader(fr);
		
		while(true)
		{
			String n = br.readLine();
			
			if(n==null)
				break;
			
			cnt++;
			total+= Integer.parseInt(n);
		}
		total = su*dan;
		
		System.out.println(cnt + "\t" + fruitName + "\t" + su + "\t" + dan + "\t" + total +"원" );
		
		br.close();
		fr.close();
	}

	public static void main(String[] args) {
		try {
			 
		}

	}

}

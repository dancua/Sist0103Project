package day0117;

import java.util.ArrayList;
import java.util.List;
import java.util.*;
import java.io.*;


public class MyShopList_07 {
	
	static final String FILENAME = "C:\\sist0103\\file\\myshop.txt";
	List<MyShop> list =new ArrayList<MyShop>();
	Scanner sc = new Scanner(System.in);
	
	public MyShopList_07() {
		shopFileRead();
	}
	
	//파일읽기
	public void shopFileRead()
	{
		FileReader fr = null;
		BufferedReader br = null;
		
		try {
			fr = new FileReader(FILENAME);
			br = new BufferedReader(fr);
			
			while(true)
			{
				String b = br.readLine();
				
				if(b==null)
					break;
				
			}
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace(); 
		} catch(IOException e) {
			e.printStackTrace();
		}
	}
	
	
	//파일쓰기
	public void shopFileWrite()
	{
		FileWriter fw = null;
		
		try {
			fw = new FileWriter(FILENAME);
			
			//MyShop클래스의 내용을 얻어서 출력
			for(MyShop sp: list) {
				String s = sp.getSangpum()+","+sp.getSu()+","+sp.getPrice() + "\n";
				fw.write(s);
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally {
			fw.close();
		}
	}
	
	
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}

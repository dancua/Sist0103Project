package day0117;

import java.util.ArrayList;
import java.util.List;
import java.util.*;
import java.io.*;

public class MyShopList_07 {

	static final String FILENAME = "C:\\sist0103\\file\\shop.txt";
	List<MyShop> list = new ArrayList<MyShop>();
	Scanner sc = new Scanner(System.in);

	public MyShopList_07() {
		shopFileRead();
	}

	// 파일읽기
	public void shopFileRead() {
		FileReader fr = null;
		BufferedReader br = null;

		try {
			fr = new FileReader(FILENAME);
			br = new BufferedReader(fr);

			while (true) {
				String b = br.readLine();

				if (b == null)
					break;

				String[] data = b.split(",");
				String sang = data[0];
				int su = Integer.parseInt(data[1]);
				int price = Integer.parseInt(data[2]);
				int total = su * price;

				// MyShop클래스에 저장
				// 방법1.
				/*
				 * MyShop s = new MyShop(); //디폴트 생성후 setter로 넣기 s.setSangpum(sang);
				 * s.setSu(su); s.setPrice(price); s.setTotal(total);
				 */

				// 방법2.
				MyShop s = new MyShop(sang, su, price, total); // 명시적 생성후
				s.setTotal(total);

				// 리스트에 추가
				list.add(s);
			}
			System.out.println("파일에서 총 " + list.size() + "개의 상품목록을 가져왔어요");
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				br.close();
				fr.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}

	// 파일쓰기
	public void shopFileWrite() {
		FileWriter fw = null;

		try {
			fw = new FileWriter(FILENAME);

			// MyShop클래스의 내용을 얻어서 출력
			for (MyShop sp : list) {
				String s = sp.getSangpum() + "," + sp.getSu() + "," + sp.getPrice() + "," + sp.getTotal() + "\n";
				fw.write(s);
			}

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			try {
				fw.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}

	// MyShop 입력
	public void shopAdd() {
		System.out.println("추가할 상품명은: ");
		String sang = sc.nextLine();
		System.out.println("수량은? ");
		int su = Integer.parseInt(sc.nextLine());
		System.out.println("가격은? ");
		int price = Integer.parseInt(sc.nextLine());
		int total = su * price;

		// MyShop 클래스가 생성
		MyShop sp = new MyShop(sang, su, price, total);

		// list에 sp 추가
		list.add(sp);
		System.out.println("***상품정보가 입력되었습니다!***");
	}

	// 파일 전체 출력
	public void shopAllDatas() {
		if (list.size() == 0) {
			System.out.println("**출력할 상품이 없습니다.**");
			return; // 현재 메서드 종료
		}
		System.out.println("\t**전체 상품 정보");
		System.out.println("");
		System.out.println("번호\t상품\t수량\t가격\t총금액");
		System.out.println("-------------------------------------");

		int no = 1;
		for (MyShop sp : list) {
			System.out.println(
					no++ + "\t" + sp.getSangpum() + "\t" + sp.getSu() + "\t" + sp.getPrice() + "\t" + sp.getTotal());
		}
	}

	public void shopDelete() {

	}

	// 메인 프로세스 메서드
	public void process() {
		int num = 0;

		while (true) {
			System.out.println("1.상품추가  2.상품출력  3.상품삭제  9.종료");
			num = Integer.parseInt(sc.nextLine());

			if (num == 1)
				this.shopAdd();
			else if (num == 2)
				this.shopAllDatas();
			else if (num == 3)
				this.shopDelete();
			else if (num == 9) {
				System.out.println("Shop정보를 저장후 종료할게요");
				this.shopFileWrite();
				System.exit(0);
			} else {
				System.out.println("다시 입력해주세요");
			}
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		MyShopList_07 frw = new MyShopList_07();
		frw.process();
	}

}

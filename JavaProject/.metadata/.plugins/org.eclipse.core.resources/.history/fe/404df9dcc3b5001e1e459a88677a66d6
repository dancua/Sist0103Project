package day0118;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class SwingArrEvent_08 extends JFrame{

	Container cp;
	JButton [] btn = new JButton[6];
	String [] btnLabel= {"Red","Magenta","Blue","Green","Yellow","Gray"};
	Color [] btnColors={Color.RED,Color.BLUE,Color.gray,Color.green,Color.black,Color.cyan};
	
	public SwingArrEvent_08(String title) {
		super(title);

		cp = this.getContentPane();
		
		this.setBounds(300, 100, 600, 300);
		cp.setBackground(new Color(153,102,250));
		this.setVisible(true);
	}
	
	public void initDesign()
	{
		//Panel은 기본이 FlowLayout
		JPanel panel = new JPanel();
		panel.setBackground(Color.orange);
		
		this.add(panel,BorderLayout.NORTH);
		
		for(int i =0; i < btn.length; i++) 
		{
			//버튼 6개 생성
			btn[0] = new JButton("버튼1");
			btn[1] = new JButton("버튼2");
			btn[2] = new JButton("버튼3");
			btn[3] = new JButton("버튼4");
			btn[4] = new JButton("버튼5");
			btn[5] = new JButton("버튼6");
			
//			버튼 6개에 각각의 버튼색상 변경
			
			btn[0] = setBackground();
			
			
			
//			panel에 버튼6개 추가
		}
	}
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new SwingArrEvent_08("스윙기본");
	}

}
